<fieldset>
          <div class="form-group-container">
            <div class="category">
              <h3>Education</h3>
            </div>
            <div class="content" id="education">
              <div class="form-group">
                <div class="form-item">
                  <label for="school">School</label>
                  <input id="school" name="school" type="text" placeholder="Example: University of California" />
                </div>
                 <div class="form-item">
                  <label for="gpa">GPA</label>
                  <input id="gpa" name="gpa" type="number" step="0.01" placeholder="3.5" />  
                </div>   
                 <div class="form-item">
                  <label for="field_of_study">Field of Study</label>
                  <input id="field_of_study" name="field_of_study" type="text" placeholder="Exampel: Bachelor of Technology" />  
                </div>  
                <div class="form-item">
                  <label for="graduation_date">Graduation Date</label>
                  <input id="graduation_date" name="graduation_date" type="date" />  
                </div>
              </div>
            </div>
          </div>
        </fieldset>